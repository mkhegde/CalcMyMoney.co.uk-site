{
  "$schema": "https://openapi.vercel.sh/vercel.json",

  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "calcmymoney.co.uk" }],
      "destination": "https://www.calcmymoney.co.uk/:path*",
      "permanent": true
    },

    { "source": "/salarycalculator", "destination": "/salary-calculator-uk", "permanent": true },
    { "source": "/salarycalculatoruk", "destination": "/salary-calculator-uk", "permanent": true },
    { "source": "/SalaryCalculatorUK", "destination": "/salary-calculator-uk", "permanent": true },

    { "source": "/calculators/-:slug", "destination": "/:slug", "permanent": true },

    { "source": "/jobsalarypage", "destination": "/job-salaries", "permanent": true },
    { "source": "/AnnuityCalculator", "destination": "/annuity-calculator", "permanent": true },

    {
      "source": "/salary-calculator-u-k",
      "destination": "/salary-calculator-uk",
      "permanent": true
    },
    {
      "source": "/mortgage-calculator-u-k",
      "destination": "/mortgage-calculator-uk",
      "permanent": true
    },
    { "source": "/tax-calculators-u-k", "destination": "/tax-calculators-uk", "permanent": true },

    {
      "source": "/ProRataSalaryCalculator",
      "destination": "/pro-rata-salary-calculator",
      "permanent": true
    },
    {
      "source": "/overtimepaycalculator",
      "destination": "/overtime-pay-calculator",
      "permanent": true
    }
  ],

  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/:path*", "destination": "/" }
  ],

  "cleanUrls": true,
  "trailingSlash": false
}
